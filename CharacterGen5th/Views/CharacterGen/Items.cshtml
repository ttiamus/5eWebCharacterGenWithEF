<script src="~/Scripts/Controllers/ItemController.js"></script>
<body ng-app="item">
    <div ng-controller="itemController">
        <span>
                <label>Total Wealth</label><label>0000</label>
        </span>

        <table>

            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Item</th>
                <th>Weight</th>
                <th>Cost</th>
            </tr>

            
            <tr ng-repeat="selectedItem in selectedItems track by $index">
                <td>{{selectedItem.id}}</td>
                <td><input type="text" ng-model="selectedItem.quantity" /></td>
                <td>
                    <select ng-model="selectedItem.item" ng-options="item.Name for item in items"></select>
                </td>
                <td>{{selectedItem.item.Weight}}</td>
                <td>{{selectedItem.item.Cost}}</td>
            </tr>
            
        </table>

        <table>
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Ammunition</th>
                <th>Weight</th>
                <th>Cost</th>
            </tr>

            <tr ng-repeat="selectedAmmunition in selectedAmmunitions track by $index">
                <td>{{selectedAmmunition.id}}</td>
                <td><input type="text" ng-model="selectedAmmunition.quantity" /></td>
                <td>
                    <select ng-model="selectedAmmunition.ammunition" ng-options="ammunition.Name for ammunition in ammunitions"></select>
                </td>
                <td>{{selectedAmmunition.ammunition.Weight}}</td>
                <td>{{selectedAmmunition.ammunition.Cost}}</td>
            </tr>
        </table>

        <table>

            <tr>
                <th></th>
                <th>Weapon</th>
                <th>Damage</th>
                <th>Damage Type</th>
                <th>Weight</th>
                <th>Cost</th>
            </tr>

                <tr ng-repeat="selectedWeapon in selectedWeapons track by $index">
                    <td>{{selectedWeapon.id}}</td>
                    <td>
                        <select ng-model="selectedWeapon.weapon" ng-options="weapon.Name for weapon in weapons"></select>
                    </td>

                    <td>{{selectedWeapon.weapon.Damage}}</td>
                    <td>{{selectedWeapon.weapon.DamageType}}</td>
                    <td>{{selectedWeapon.weapon.Weight}}</td>
                    <td>{{selectedWeapon.weapon.Cost}}</td>
                </tr>
            
        </table>

        <table>

            <tr>
                <th></th>
                <th>Armor</th>
                <th>AC Bonus</th>
                <th>Armor Type</th>
                <th>Max Dex Bonus</th>
                <th>Requires Str</th>
                <th>Stealth Disadvantage</th>
                <th>Weight</th>
                <th>Cost</th>
            </tr>

            <tr ng-repeat="selectedArmor in selectedArmors track by $index">
                <td>{{selectedArmor.id}}</td>
                <td>
                    <select ng-model="selectedArmor.armor" ng-options="armor.Name for armor in armors"></select>
                </td>

                <td>{{selectedArmor.armor.BaseAc}}</td>
                <td>{{selectedArmor.armor.ArmorType}}</td>
                <td>{{selectedArmor.armor.MaxDexMod}}</td>
                <td>{{selectedArmor.armor.RequiredStr}}</td>
                <td>{{selectedArmor.armor.StealthDisadvantage}}</td>
                <td>{{selectedArmor.armor.Weight}}</td>
                <td>{{selectedArmor.armor.Cost}}</td>
            </tr>
            
        </table>
    </div>
</body>