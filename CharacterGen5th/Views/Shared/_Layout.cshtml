<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "CharacterGen")</li>
                            <li>@Html.ActionLink("Stats", "StatsInput", "CharacterGen")</li>
                            <li>@Html.ActionLink("Class", "Class", "CharacterGen")</li>
                            <li>@Html.ActionLink("Class Options", "ClassOptions", "CharacterGen")</li>
                            <li>@Html.ActionLink("Skills", "Skills", "CharacterGen")</li>
                            <li>@Html.ActionLink("Items", "Items", "CharacterGen")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <!--
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        -->
        
        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/CharacterGen.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
